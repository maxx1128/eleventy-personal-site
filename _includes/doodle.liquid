{% if align == 'right' %}
  {% assign preserveAspectRatio = "xMaxYMin meet" %}
{% else %}
  {% comment %} Default is left aligned {% endcomment %}
  {% assign preserveAspectRatio = "xMinYMin" %}
{% endif %}

{% if alwaysShow %}
  {% assign showClass = "node-doodle--always-show" %}
{% else %}
  {% assign showClass = "" %}
{% endif %}

<svg aria-hidden="true" class="doodle {{ showClass }} hidden" preserveAspectRatio="{{ preserveAspectRatio }}">
  <use aria-hidden="true" class="doodle__use" xlink:href="/assets/images/doodles/all.svg#doodle-1"></use>
</svg>
