{% assign note_index = index | default: 1 %}

<article class="note-styler note-coloring--{{ note_index }} {{ class }} flex flex-column">
  <div class="post-content width-100">
    {% if singleNotePage %}
      <h2 class="mt-0">
    {% else %}
      <h3 class="mt-0">
    {% endif %}

      {% if url %}
        <a href="{{ url }}">
      {% endif %}
        {{ date | noteDate }}
      {% if url %}
        </a>
      {% endif %}

    {% if singleNotePage %}
      </h2>
    {% else %}
      </h3>
    {% endif %}

    {{ content }}
  </div>
</article>
