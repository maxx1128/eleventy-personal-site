---
layout: layouts/base.liquid
---

{% assign header_class = "" %}

{% if image %}
  {% assign header_class = header_class | append: " header--with-custom-image" %}
  {% assign banner_image = "/assets/images/featured/" | append: image | prepend: site.url %}
{% else %}
  {% assign banner_image = false %}
{% endif %}

{% if date and postLabel != "Note" %}
  {% assign has_date = true %}
{% else %}
  {% assign has_date = false %}
{% endif %}

{% if postLabel == "Note" %}
  {% assign header_class = header_class | append: " pt-2" %}
{% else %}
  {% assign header_class = header_class | append: " header--with-image py-3" %}
{% endif %}

<article id="content" class="post-content width-100 {% unless no-padding or postLabel == 'Note' %}py-4 sm--py-6 lg--mt-4{% endunless %} {% unless no-max-width %}resp-max-width{% endunless %}">
  {{content}}
</article>
