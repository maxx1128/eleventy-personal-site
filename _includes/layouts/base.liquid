<!DOCTYPE html>
<html lang="en" class="no-js">
  {% include head.liquid %}
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Beiruti:wght@200..900&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Homemade+Apple&display=swap" rel="stylesheet">

  <body>
    <ul>
      {% for menu_item in menu %}
        <li>
          <a href="{{ menu_item.link }}">
            {{ menu_item.name }}
          </a>
        </li>
      {% endfor %}
    </ul>

    <div class="post-content">
      {{ content | safe }}
    </div>

    <script
      src="https://unpkg.co/gsap@3/dist/gsap.min.js"
      charset="utf8"></script>
    <script
      src="http://cdnjs.cloudflare.com/ajax/libs/gsap/1.18.0/TweenMax.min.js"
      charset="utf8"></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.18.4/plugins/AttrPlugin.min.js"
      charset="utf8"></script>

    {% include footerscripts.liquid %}
    {% include serviceworker.liquid %}
  </body>
</html>
