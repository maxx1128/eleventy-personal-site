<div class="mt-auto">
  {% assign nextNote = collections.notes | getNextCollectionItem: page %}
  {% assign previousNote = collections.notes | getPreviousCollectionItem: page %}

  <ul class="list-reset m-0 p-0 flex flex-column lg--flex-row flex-justify-between flex-gap-4 text-small">
    {% if nextNote %}
      <li class="flex flex-column mb-0">
        <strong>Next Note:</strong>
        <a class="random-navigator__next-link" href="{{ nextNote.url | url }}">
          {{ nextNote.date | noteDate }}
        </a>
      </li>
    {% endif %}

    <li id="random-navigator-wrapper" class="random-navigator-wrapper--note flex flex-column mb-0 hidden">
      <strong>Random Note:</strong>
      <a href="javascript:void();"></a>
    </li>

    {% if previousNote %}
      <li class="flex flex-column mb-0">
        <strong>Previous Note:</strong>
        <a class="random-navigator__previous-link" href="{{ previousNote.url | url }}">
          {{ previousNote.date | noteDate }}
        </a>
      </li>
    {% endif %}
  </ul>
</div>
