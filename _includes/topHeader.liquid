<div class="top-header {% if image or isPage %}slant-bottom-left{% endif %} bg-mono-white border-primary-base">
  <div class="resp-max-width py-2 flex flex-row flex-justify-between flex-gap-4">
    <div class="flex flex-column flex-align-start">
      <p class="my-0 mr-4 text-h6 font-weight-header">
        <a {% if page.url == '/' %}aria-current="page"{% endif %} class="text-mono-black" aria-label="Homepage" href="{% if page.url == '/' %}#content{% else %}/{% endif %}">
          Max Antonucci
        </a>
      </p>
      <p class="my-0 text-small italic">
        {{metadata.description}}
      </p>
    </div>

    <div class="theme-switcher flex flex-justify-start flex-gap-2 text-tiny">
      {% for theme in themes %}
        <div class="theme-switcher__option flex flex-align-center">
          <input class="theme-switcher__input" type="radio" id="theme-{{ theme.name }}" name="theme-selector" value="{{ theme.name }}"\>
          <label class="theme-switcher__label inline-block px-3 py-1 capitalize text-action-base border-radius-small" for="theme-{{ theme.name }}">
            {{ theme.name }} <span class="screenReader">theme</span>
          </label>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
