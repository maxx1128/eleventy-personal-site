{% assign banner_image = metadata.post.imagePath | append: image %}

<div class="{% unless %}header--with-image{% endunless %}">
  <div class="header__text pb-2 resp-max-width">
    <div class="relative py-4">
      <div class="flex flex-justify-between">
        <small class="block mb-2 font-weight-bold">
          {{ date | toUTCString }}
        </small>

        <span class="hidden-md-down">
          {% include tagList
            tags: tags
            rightAlign: true
          %}
        </span>
      </div>

      <h1 class="my-0 text-h2">
        {{ title | replace: " - Maxwell Antonucci", ""}}
      </h1>
    </div>

    <p class="py-0 mt-1 mb-2 text-small font-weight-light">
      {{ excerpt }}
    </p>
  </div>
</div>

{% if image %}
  <div class="header--with-custom-image width-100 py-3" style="background-image: url('{{ banner_image }}')">
  </div>
{% endif %}
