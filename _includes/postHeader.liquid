{% assign banner_image = metadata.post.imagePath | append: image %}

<div class="header header--post doodle__header poke-color--text flex flex-column xl--flex-row flex-justify-end {% if image %}header--with-custom-image poke-background--screen{% else %}poke-background--bg{% endif %} {% if no-min-image-height %}header--with-no-min-height{% endif %}" {% if image %}style="background-image: url('{{ banner_image }}');{% endif %} {% if featured_image_align_y %}background-position-y: {{ featured_image_align_y }}%;{% endif %}">
  {% unless image %}
    <div class="doodle__wrapper" aria-hidden="true">
      {% include doodle.liquid,
        alwaysShow: true,
        align: 'right'
      %}
    </div>
  {% endunless %}

  <div class="header__text header__text--post {% if image %}header__text--post-with-image transparent-white-bg{% endif %} my-6 resp-max-width flex flex-column xl--flex-justify-center py-4 my-8 xl--my-6">
    <div class="flex flex-justify-between mb-auto xl--mb-0">
      <small class="block mb-2 font-weight-bold">
        {{ date | toUTCString }}
      </small>

      <span class="hidden-md-down">
        {% include tagList
          tags: tags
          rightAlign: true
        %}
      </span>
    </div>

    <h1 class="mt-2 mb-0 text-h2">
      {{ title | replace: " - Maxwell Antonucci", ""}}
    </h1>

    {% if excerpt %}
      <p class="my-0 mt-4 text-small font-weight-light">
        {{ excerpt }}
      </p>
    {% endif %}
  </div>

  {% if image %}
    <div class="header__large-image hidden-xl-down flex-item" style="background-image: url('{{ banner_image }}'); {% if featured_image_align_y %}background-position-y: {{ featured_image_align_y }}%;{% endif %}">
    </div>
  {% endif %}
</div>
